generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id        Int     @id @default(autoincrement())
  user_photo String?
  user_cover String?
  user_name  String
  user_username String?
  user_about String?
  user_location String?
  user_email String?
  user_password String?
  user_token String?
  user_phone String?
  user_status UserStatus  @default(CONFIRM)
}

enum UserStatus {
    CONFIRM
    VERIFIED
    BLOCKED
    DELETED

}